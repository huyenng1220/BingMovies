
<div class="container">
<div class="dropdown">
  <span><font face="sans-serif" size="4">Sort By</font></span>
  <div class="dropdown-content">
    <p><%= link_to "Title", search: params[:search], filter: params[:filter], order: "title" %></p>
      <p><%= link_to "Release Date", search: params[:search], filter: params[:filter], order: "release" %></p>
      <p><%= link_to "Genre", search: params[:search], filter: params[:filter], order: "genre" %></p>
  </div>
</div>
<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-md-3 col-sm-6 col-xs-6">
      <div class="thumbnail tile">
        <% if movie.poster_path %>
          <%= link_to (image_tag("https://image.tmdb.org/t/p/w185/#{movie.poster_path}")), movie_path(movie.id) %>
        <% else %>
          <%= link_to movie_path(movie.id) do %>
            <div class="missing-img">
              <p>Error loading image.</p>
            </div>
          <% end %>
        <% end %>
        <p class="title-link"><%= link_to (movie.title), movie_path(movie.id) %></p>
      </div>
    </div>
  <% end %>
</div>

